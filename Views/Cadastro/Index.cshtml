@model RoleTOP_MVC.ViewModels.ErrosViewModel
@{
    var nomeView = (string) ViewData["ActionCadastro"];
}
<main>
        <div class="titulo">
            <img src="/Img/titulo cadastro.svg">
        </div>

        <div id="input-container">
        <form class="formularios" method="POST" action='@Url.Action("Cadastrar","Cadastro")'>
            @if ("Erros".Equals(Model.NomeView)){
            @foreach (string msg in Model.Mensagem)
                {   
                <h4 id="cadastro-actions">ERRO: @msg</h4>;
                }
            } 
                <label for="nome">Nome:*</label>
                <input type="text" id="nome" autofocus required name="nome">

                <label for="email">Email:*</label>
                <input type="email" id="email" placeholder="email@gmail.com" required name="email">

                <label for="senha">Senha *</label>
                <input type="password" id="senha" required minlength="8" name="senha">
                <!-- @if("Senha".Equals(nomeView) || "TermoseSenha".Equals(nomeView)){
                    Html.RenderPartial("_SenhaValidacao");
                } -->
                <label for="confirm-senha">Confirmar Senha *</label>
                <input type="password" id="confirm-senha" required minlength="8" name="confirmar-senha">

                <label for="cep">CEP *</label>
                <input type="text" id="cep" required maxlength="9" name="cep">

                <label for="cpf">CPF *</label>
                <input type="text" id="cpf" required maxlength="14" placeholder="_ _ _ . _ _ _ . _ _ _ - _ _" name="cpf">

                <label for="tel-cel">Tel/Cel *</label>
                <input type="tel" id="tel-cel" required maxlength="11" placeholder="(11) _ _ _ _ - _ _ _ _" name="telefone"><br>




                <label for="termos">Termos de uso:</label>
                <textarea class="termos" rows="6"
                    disabled>A compreensão de um texto é a análise e decodificação do que está realmente escrito, seja das frases ou das ideias presentes. Já a interpretação de texto, está ligada às conclusões que podemos chegar ao conectar as ideias do texto com a realidade. É o entendimento subjetivo que o leitor teve sobre o texto. Nas favelas, no Senado Sujeira pra todo lado Ninguém respeita a Constituição Mas todos acreditam no futuro da nação Que país é esse?Que país é esse?Que país é esse?No Amazonas, no Araguaia iá, iá Na Baixada Fluminense Mato Grosso, Minas Gerais E no Nordeste tudo em paz Na morte eu descanso Mas o sangue anda solto Manchando os papéis, documentos fiéis Ao descanso do patrão Que país é esse?</textarea><br>
                    <!-- @if("Termos".Equals(nomeView) || "TermoseSenha".Equals(nomeView)){
                        Html.RenderPartial("_TermosDeUso");
                    }  -->
                <div class="check-radio-centro">
                    <div>
                        <!-- Retorna value, no caso, termo aceito retorna 1, termo recusado retorna 0.-->
                        <input type="radio" id="termo-aceito" name="termos" value="1">
                        <label for="termo-aceito">Aceito os termos de uso.</label>
                    </div>
                    <div>

                        <input type="radio" id="termo-recusado" name="termos" value="0">
                        <label for="termo-recusado">Não aceito os termos de uso.</label>
                    </div>
                </div>
                <div>
                    <input type="submit" id="bt-enviar" value="Cadastrar-me">
                </div>
            </form>
        </div>
        <p class="divisoria-rodape"></p>
    </main>