@model RoleTOP_MVC.ViewModels.InfoEventoViewModel
<main>
    <div class="resumo-adm">
        <div>
            <p class="titulo-resumo">@Model.evento.NomeEvento</p>
        </div>
        @if(!string.IsNullOrEmpty(Model.evento.bannerURL)){
            <div class="banner-evento">
                <p class="info-titulo">Banner do evento:</p>
                <img src="@Model.evento.bannerURL" alt="Banner do evento" width="600px" height="300px">;
            </div>
        }
        <div class="info-evento">
        <table>
            <tr>
                <th>Data do Evento:</th><td>@Model.evento.DataDoEvento</td>
            </tr>
            <tr>
                <th>Descrição do Evento:</th><td>@Model.evento.TipoEvento</td>
            </tr>
        </table>
        </div>
        <div class="btn">
                <a href="javascript:history.back()">Voltar à página anterior</a>
        </div>
    </div>
</main>